@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager




<ul class="nav  shift ml-auto mr-3 order-lg-last">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="d-flex align-items-center ">
            <a href="#"><i class="fas fa-bell fa-1x"></i></a>
            <span class=" badge badge-danger" style="font-size:10px;">
                0
            </span>
        </div>
    }
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle pr-0" data-toggle="dropdown" href="#"><i class="fas fa-user-circle fa-2x"></i></a>
        <div class="dropdown-menu dropdown-menu-right shift">
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="nav-link text-dark dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="dropdown-item nav-link">Logout</button>
                </form>
            }
            else
            {
                <a class="dropdown-item nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                <a class="dropdown-item nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
            }
        </div>
    </li>
</ul>