@page
@model VillageDrill.Areas.Admin.Pages.OrderCreateModel
@{
    ViewData.Add("Title", "Create Order");
}
<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-5">
                <label asp-for="PurchaseOrder.Vendor" class="col-form-label"></label>
                <select asp-for="PurchaseOrder.Vendor" class="form-control">
                    @foreach (var vendor in Model.Sorted)
                    {
                        <option>@vendor.VendorName</option>
                    }
                </select>
                <span asp-validation-for="PurchaseOrder.Vendor" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="PurchaseOrder.DateOrdered"></label>
                <input asp-for="PurchaseOrder.DateOrdered" class="form-control" type="date" />
                <span asp-validation-for="PurchaseOrder.DateOrdered" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="PurchaseOrder.OrderItems" class="col-form-label">Part</label>
                <select asp-for="PurchaseOrder.OrderItems" class="form-control">
                    @foreach (var item in Model.Items)
                    {
                        <option>@item.ItemName</option>
                    }
                </select>
                @*<span asp-validation-for="PurchaseOrder.OrderItems" class="text-danger"></span>*@
            </div>
        </form>
    </div>
</div>