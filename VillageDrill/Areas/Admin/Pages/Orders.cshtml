@page
@model VillageDrill.Areas.Admin.Pages.OrdersModel
@{
    ViewData.Add("Title", "Orders");
}

<!--Title-->
<h2>@ViewData["Title"]</h2>

<!--Search Bar-->
<form class="form-inline" action="">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
        </div>
        <input type="text" class="form-control" placeholder="Filter Results" id="searchInput">
    </div>
</form>

<!-- Nav Tabs -->
<ul class="nav nav-tabs mt-4">
    <li class="nav-item">
        <a class="nav-link active" href="#allTab">All</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#pendingTab">Pending</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#recievedTab">Recieved</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#overdueTab">Overdue</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div id="allTab" class="tab-pane active">
        <table class="table table-striped table-hover table-borderless">
            <tbody id="searchTable">
                @foreach (var vendor in Model.Vendors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => vendor.VendorName)<br />
                            Order Date: 10/25/18<br />
                            Delivery Date: 11/2/18
                        </td>
                        <td>Pending</td>
                        <td><a class="btn btn-primary" asp-page="./OrderDetails">Details</a></td>
                        <td><a class="btn btn-primary" asp-page="./OrderRecieve">Recieve</a></td>
                    </tr>
                }
                
                
            </tbody>
        </table>
    </div>
    <div id="pendingTab" class="tab-pane fade">
        <table class="table table-striped table-hover table-borderless table-responsive-sm">
            <tbody id="searchTable">
                <tr>
                    <td>
                        Rocky Mountain<br />
                        Order Date: 10/25/18<br />
                        Delivery Date: 11/2/18
                    </td>
                    <td>Pending</td>
                    <td><a class="btn btn-primary" asp-page="./OrderDetails">Details</a></td>
                    <td><button type="button" class="btn btn-primary">Recieve</button></td>
                </tr>
                <tr>
                    <td>
                        Some other Vendor<br />
                        Order Date: 11/1/18<br />
                        Delivery Date: 11/10/18
                    </td>
                    <td>Pending</td>
                    <td><a class="btn btn-primary" asp-page="./OrderDetails">Details</a></td>
                    <td><button type="button" class="btn btn-primary">Recieve</button></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="recievedTab" class="tab-pane fade">
        <table class="table table-striped table-hover table-borderless table-responsive-sm">

            <tbody id="searchTable">
                <tr>
                    <td>
                        Some other Vendor<br />
                        Order Date: 10/14/18<br />
                        Delivery Date: 10/1/18
                    </td>
                    <td>Received</td>
                    <td><a class="btn btn-primary" asp-page="./OrderDetails">Details</a></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="overdueTab" class="tab-pane fade">
        <table class="table table-striped table-hover table-borderless table-responsive-sm">

            <tbody id="searchTable"></tbody>
        </table>
    </div>
</div>


<!--Add Button-->
<a class="float-right" href="#"><i class="fas fa-plus-circle fa-3x"></i></a>






<!--Javascript-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

<script>
    $(document).ready(function () {
        $(".nav-tabs a").click(function () {
            $(this).tab('show');
        });
    });
</script>