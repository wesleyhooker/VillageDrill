@page
@model VillageDrill.Areas.Admin.Pages.VendorModel
@{
    ViewData.Add("Title", "Vendor");
    ViewData.Add("includeTitle", "true");
}

<div class="tab-content">
    <div  class="tab-pane active">
        <table class="table table-borderless data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var vendor in Model.Vendors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => vendor.VendorName)
                        </td>
                        <td>
                            <a asp-page="./VendorDetails" asp-route-id="@vendor.VendorID" class="btn btn-outline-primary mr-2"><i class="fas fa-info"></i></a>
                            <a asp-page="./VendorPurchaseHistory" asp-route-id="@vendor.VendorID" class="btn btn-primary">Purchase History</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--Add Button-->
<a class="float-right" asp-page="./VendorCreate"><i class="fas fa-plus-circle fa-3x"></i></a>


<!--Javascript-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
