@page
@model VillageDrill.Areas.Admin.Pages.VendorModel
@{
    ViewData.Add("Title", "Vendor");
}

<!--Title-->
<h2>@ViewData["Title"]</h2>

<div class="tab-content">
    <div  class="tab-pane active">
        <table class="table table-striped table-hover table-borderless">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody >
                @foreach(var vendor in Model.Vendors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => vendor.VendorName)
                        </td>
                        <!-- Display vendor adress temporarily, will eventuall have vendor details page to display this -->
                        <td>
                            @Html.DisplayFor(m => vendor.VendorAddress)
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary">Details</button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary">Purchase History</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--Add Button-->
<a class="float-right" href="#"><i class="fas fa-plus-circle fa-3x"></i></a>


<!--Javascript-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

