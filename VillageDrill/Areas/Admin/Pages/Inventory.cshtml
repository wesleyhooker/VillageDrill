@page "/"
@model VillageDrill.Areas.Admin.Pages.InventoryModel
@{
    ViewData.Add("Title", "Inventory");
}

<!--Title-->
<h2>@ViewData["Title"]</h2>

<!--Search Bar-->
<form class="form-inline" action="">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
        </div>
        <input type="text" class="form-control" placeholder="Filter Results" id="searchInput">
    </div>
</form>

<!-- Nav Tabs -->
<ul class="nav nav-tabs mt-4">
    <li class="nav-item">
        <a class="nav-link active" href="#allTab">All</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#reorderTab">Reorder</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#assembliesTab">Assemblies</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div id="allTab" class="tab-pane active">
        <table class="table table-striped table-hover table-borderless">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>On Hand</th>
                    <th>In Transit</th>
                    <th>Reorder Part</th>
                    <th>Assemble</th>
                </tr>
            </thead>
            <tbody id="searchTable">
                <tr>
                    <td>John</td>
                    <td>Doe</td>
                    <td>July</td>
                    <td>Dooley</td>
                    <td><button type="button" class="btn btn-primary">Assemble</button></td>
                </tr>
                <tr>
                    <td>Mary</td>
                    <td>Moe</td>
                    <td>July</td>
                    <td>Dooley</td>
                    <td></td>
                </tr>
                <tr>
                    <td>July</td>
                    <td>Dooley</td>
                    <td>July</td>
                    <td>Dooley</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="reorderTab" class="tab-pane fade">
        <table class="table table-striped table-hover table-borderless table-responsive-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>On Hand</th>
                    <th>In Transit</th>
                    <th>Reorder Part</th>
                    <th>Reorder</th>
                </tr>
            </thead>
            <tbody id="searchTable">   
                <tr>
                    <td>July</td>
                    <td>Dooley</td>
                    <td>July</td>
                    <td>Dooley</td>
                    <td><button type="button" class="btn btn-warning">Reorder</button></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="assembliesTab" class="tab-pane fade">
        <table class="table table-striped table-hover table-borderless table-responsive-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>On Hand</th>
                    <th>Assemble</th>
                </tr>
            </thead>
            <tbody id="searchTable">
                <tr>
                    <td>John</td>
                    <td>Doe</td>
                    <td><button type="button" class="btn btn-primary">Assemble</button></td>
                </tr>
                <tr>
                    <td>Mary</td>
                    <td>Moe</td>
                    <td></td>
                </tr>
                <tr>
                    <td>July</td>
                    <td>Dooley</td>
                    <td><button type="button" class="btn btn-primary">Assemble</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!--Add Button-->
<a class="float-right" href="#"><i class="fas fa-plus-circle fa-3x"></i></a>




<!--Javascript-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

<script>
    $(document).ready(function () {
        $(".nav-tabs a").click(function () {
            $(this).tab('show');
        });
    });
</script>