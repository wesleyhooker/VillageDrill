@page "/"
@model VillageDrill.Areas.Admin.Pages.InventoryModel
@{
    ViewData.Add("Title", "Inventory");
}

<!--Title-->
<h2>@ViewData["Title"]</h2>

<!--Search Bar-->
<form class="form-inline" action="">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
        </div>
        <input type="text" class="form-control" placeholder="Filter Results" id="searchInput">
    </div>
</form>

<!-- Nav Tabs -->
<ul class="nav nav-tabs mt-4">
    <li class="nav-item">
        <a class="nav-link active" href="#allTab">All</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#reorderTab">Reorder</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#assembliesTab">Assemblies</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div id="allTab" class="tab-pane active">
        <table class="table table-striped table-hover table-borderless">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>On Hand</th>
                    <th>In Transit</th>
                    <th>Reorder Part</th>
                    <th>Assemble</th>
                </tr>
            </thead>
            <tbody id="searchTable">
                <tr>
                    <td>John</td>
