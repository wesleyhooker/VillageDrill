@page
@model VillageDrill.Areas.SuperAdmin.Pages.DeleteUserModel
@await Component.InvokeAsync("NToastNotify")
@{
    ViewData["Title"] = "Delete User";
}
<h1>Are You Sure You Want To Delete/Disable This User?</h1>

<form method="post">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label>Name</label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.myUser.Name" readonly class="form-control" />
            </div>                       
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>UserName</label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.myUser.UserName" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Phone Number</label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.myUser.PhoneNumber" readonly class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger "value="Continue" asp-route-id="@Model.myUser.Id"/>
            <a asp-area="SuperAdmin" asp-page="Users" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
